<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTypeAwards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_silver" />

    <TextView
        android:id="@+id/tvTypeAward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue"
        app:layout_constraintEnd_toEndOf="@+id/ivTypeAwards"
        app:layout_constraintTop_toTopOf="@+id/ivTypeAwards" />

    <TextView
        android:id="@+id/tvPoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="500.000 Point"
        android:textColor="@color/grey"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/btn_silver"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTypeAwards"
        app:layout_constraintStart_toStartOf="@+id/ivTypeAwards" />

    <TextView
        android:id="@+id/tvAwardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:text="Gift Card IDR 500.000"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTypeAwards" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>